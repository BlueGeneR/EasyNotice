{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Notice": {
    "IntervalSeconds": 60, //发送间隔（仅限同一标题），避免短时间内发送大量相同的消息

    //                  ------【邮件配置】-------
    "Mail": {
      "Host": "smtp.qq.com",
      "Port": 465,
      "FromAddress": "12345@qq.com", //发送的邮箱（需与密码匹配）
      "FromName": "System", //发送人名称（可自定义）
      "Password": "password", //发送密码
      "ToAddress": [ "a@qq.com" ] //接收邮件的地址
    },

    //                  ------【钉钉配置】-------
    "DingTalk": {
      "WebHook": "https://oapi.dingtalk.com/robot/send?access_token=xxxxx",//通知回调的钩子
      "Secret": "secret"//秘钥
    }
  }
}
